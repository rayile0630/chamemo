<% if current_user.favpost?(memo_room) %>
  <%= form_with(model: current_user.favorites.find_by(memo_room_id: memo_room.id), local: true, method: :delete, class: "d-inline") do |f| %>
    <%= hidden_field_tag :memo_room_id, memo_room.id,{id: "like-id#{memo_room.id}"} %>
    <%= f.submit 'いいね解除', class: 'btn btn-danger btn-sm' %>
  <% end %>
 <% else %>
  <%= form_with(model: current_user.favorites.build, local: true, class: "d-inline") do |f| %>
    <%= hidden_field_tag :memo_room_id, memo_room.id,{id: "like-id#{memo_room.id}"} %>
    <%= f.submit 'いいね', class: 'btn btn-warning btn-sm' %>
  <% end %>
<% end %>