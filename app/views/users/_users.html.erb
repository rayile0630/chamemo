<% if users.any? %>
  <ul class="list-styled">
    <% users.each do |user| %>
      <li class="media friend-list">
        <%= image_tag user.picture.to_s %>
        <%= render 'relationships/follow_button', user: @user %>
        <div class="media-body friend-list">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィール', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>